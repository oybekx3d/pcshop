                    </section>
                </article>

                <section id="Discover">
                    <h2>Gaming PCs</h2>

                    <% gamingComputers.forEach(gamingComputer => { %>
                        <div class="computerContainer">
                            <img src="<%= gamingComputer.imageLink %>" alt="">
                            <h3><%= gamingComputer.title %></h3>
                            <p><%= gamingComputer.shortDescription %></p>
                            <ul>
                                <li>CPU: <%= gamingComputer.cpu %></li>
                                <li>GPU: <%= gamingComputer.gpu1 %></li>
                                <li>RAM: <%= gamingComputer.ram %> GB</li>
                            </ul>
                            <data value="<%= gamingComputer.price %>"><%= gamingComputer.price %></data>
                            <a href="/pc/<%= gamingComputer._id %>"><button>Learn More</button></a>
                        </div>
                    <% }); %>
                </section>



                <section>
                    <h2>Productivity PCs</h2>

