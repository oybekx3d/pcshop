<html lang="en">
    <%- include("../partials/head.ejs") %>
    <body>
        <%- include("../partials/menu.ejs") %>
        <main>
            <div class="addNewPC">
                <form action="/addItem/GamingComputer" method="post"> 
                    <div>
                        <input type="text" placeholder="Title" name="title">
                        <input type="text" placeholder="imageLink" name="imageLink">
                        <input type="text" placeholder="Description" name="description">
                        <input type="text" placeholder="Short Description" name="shortDescription">
                        <input type="number" placeholder="Price" name="price">
                        <hr>
                        <input type="text" placeholder="case" name="case">
                        <input type="text" placeholder="caseLink" name="caseLink">
                        <input type="text" placeholder="caseType" name="caseType">
                        <input type="text" placeholder="preInstalledFans" name="preInstalledFans">
                        <hr>
                        <label>
                            <input type="radio" name="bluetooth" value="1">
                            <span>Has Bluetooth</span>
                            <input type="radio" name="bluetooth" value="0">
                            <span>No Bluetooth</span>
                        </label>
                        <label>
                            <input type="radio" name="wifi" value="1">
                            <span>Has Wifi</span>
                            <input type="radio" name="wifi" value="0">
                            <span>No Wifi</span>
                        </label>
                        <label>
                            <input type="radio" name="rgb" value="1">
                            <span>Has RGB</span>
                            <input type="radio" name="rgb" value="0">
                            <span>No RGB</span>
                        </label>
                        <input type="text" placeholder="colorTheme" name="colorTheme">
                    </div>
                    <div>
                        <input type="text" placeholder="cpu" name="cpu">
                        <input type="text" placeholder="cpuLink" name="cpuLink">
                        <input type="number" placeholder="cpuCoreCount" name="cpuCoreCount">
                        <input type="text" placeholder="cpuBrand" name="cpuBrand">
                        <label>
                            <input type="radio" name="iGPU" value="1">
                            <span>Has iGPU</span>
                            <input type="radio" name="iGPU" value="0">
                            <span>NO iGPU</span>
                        </label>
                        <hr>
                        <input type="text" placeholder="cpuCooler" name="cpuCooler">
                        <input type="text" placeholder="cpuCoolerLink" name="cpuCoolerLink">
                        <input type="text" placeholder="cpuCoolerType" name="cpuCoolerType">
                        <input type="number" placeholder="cpuCoolerLength" name="cpuCoolerLength">
                    </div>
                    <div>
                        <input type="text" placeholder="motherboard" name="motherboard">
                        <input type="text" placeholder="motherboardLink" name="motherboardLink">
                        <input type="text" placeholder="motherboardSize" name="motherboardSize">
                        <input type="text" placeholder="motherboardChipset" name="motherboardChipset">
                        <hr>
                        <input type="text" placeholder="ram" name="ram">
                        <input type="text" placeholder="ramLink" name="ramLink">
                        <input type="number" placeholder="ramSpeed" name="ramSpeed">
                        <input type="number" placeholder="ramCapacity" name="ramCapacity">
                        <input type="number" placeholder="ramRepeatHowMany" name="ramRepeatHowMany">
                    </div>
                    <div>
                        <input type="text" placeholder="ssd1" name="ssd1">
                        <input type="text" placeholder="ssd1Link" name="ssd1Link">
                        <hr>
                        <input type="text" placeholder="ssd2" name="ssd2">
                        <input type="text" placeholder="ssd2Link" name="ssd2Link">
                        <hr>
                        <input type="text" placeholder="ssd3" name="ssd3">
                        <input type="text" placeholder="ssd3Link" name="ssd3Link">
                        <hr>
                        <input type="number" placeholder="ssdTotalCapacity" name="ssdCapacity">
                    </div>
                    <div>
                        <input type="text" placeholder="gpu1" name="gpu1">
                        <input type="text" placeholder="gpu1Link" name="gpu1Link">
                        <input type="number" placeholder="gpu1VramCapacity" name="gpu1VramCapacity">
                        <input type="text" placeholder="gpu1Brand" name="gpu1Brand">
                        <hr>
                        <input type="text" placeholder="gpu2" name="gpu2">
                        <input type="text" placeholder="gpu2Link" name="gpu2Link">
                        <input type="number" placeholder="gpu2VramCapacity" name="gpu2VramCapacity">
                        <input type="text" placeholder="gpu2Brand" name="gpu2Brand">
                        <hr>
                        <input type="text" placeholder="gpu3" name="gpu3">
                        <input type="text" placeholder="gpu3Link" name="gpu3Link">
                        <input type="number" placeholder="gpu3VramCapacity" name="gpu3VramCapacity">
                        <input type="text" placeholder="gpu3Brand" name="gpu3Brand">
                    </div>
                    <div>
                        <input type="text" placeholder="psu" name="powerSupply">
                        <input type="text" placeholder="psuLink" name="powerSupplyLink">
                        <input type="number" placeholder="psuWattage" name="powerSupplyWatts">
                        <input type="text" placeholder="psuEfficiency" name="powerSupplyEfficiency">
                        <input type="text" placeholder="psuTier" name="powerSupplyTier">
                    </div>
                    <button type="submit">Add</button>
                </form>
            </div>
        </main>
    </body>
</html>